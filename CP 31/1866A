#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> v(n);
    for (int i = 0; i < n; i++) {
        cin >> v[i];
    }

    int min_val = INT_MAX;
    for (int i = 0; i < n; i++) {
        min_val = min(min_val, abs(v[i]));
    }

    cout << min_val << endl;
    return 0;
}
