#include <bits/stdc++.h>
#include <vector>
using namespace std;

int main() {
    int t;
    cin >> t;  
   

    while (t--) {
        int n;
        cin>>n;
        vector<int> v(n);
        int count=0;
        for(int i=0;i<n;i++){
          cin>>v[i];
        }

        for(int i=0;i<n;i++){
            if(v[i]%2==1){
                count++;
            }
        }

        if(count%2==1){
            cout<<"NO"<<endl;
        }else{
            cout<<"YES"<<endl;
        }

        

    }

    return 0;
}
